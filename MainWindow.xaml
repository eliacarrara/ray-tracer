<Window x:Class="RayTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RayTracer" Width="673.8" Height="503.867" MinWidth="665" MinHeight="528">

    <WrapPanel x:Name="Container" Height="480" Width="649" Margin="10,10,0,0" Orientation="Vertical" MinHeight="480" MinWidth="600" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Canvas x:Name="InfoCanvas" Width="160" Height="480" MinWidth="159" MinHeight="480">
            <CheckBox x:Name="BoolSpecular" Content="Specular" Canvas.Left="10" Canvas.Top="66"/>
            <CheckBox x:Name="BoolDiffuse" Content="Diffuse Light" Canvas.Left="10" Canvas.Top="46"/>
            <CheckBox x:Name="BoolReflection" Content="Reflection" Canvas.Left="10" Canvas.Top="86"/>
            <Button x:Name="BtnRender" Content="Render" Canvas.Left="10" Canvas.Top="126" Width="75" Click="BtnRender_Click"/>
            <CheckBox x:Name="BoolShadow" Content="Shadow" Canvas.Left="10" Canvas.Top="106"/>
            <Label x:Name="LblRender" Canvas.Top="10" Canvas.Left="10" Content="-" Foreground="Black"/>
        </Canvas>
        <Canvas x:Name="PaintCanvas" Width="480" Height="480" MinWidth="480" MinHeight="480"/>
    </WrapPanel>
</Window>
